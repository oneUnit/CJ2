<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/toplayout"
        android:background="#edf5fe">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView21"
            android:background="@drawable/settings_icon"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="485dp"
        android:layout_marginTop="65dp"
        android:background="#444b55">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="#edf5fe"
            android:id="@+id/relativeLayout31"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Select Your Tarif"
                android:id="@+id/textView29"
                android:layout_marginLeft="74dp"
                android:layout_marginStart="74dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_marginTop="10dp"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="27dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/comparision"
                android:id="@+id/imageView20"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="25dp"
                android:layout_marginStart="25dp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="#edf5fe"
            android:layout_below="@+id/relativeLayout31"
            android:layout_alignLeft="@+id/relativeLayout31"
            android:layout_alignStart="@+id/relativeLayout31"
            android:id="@+id/relativeLayout32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Send Data To Server"
                android:id="@+id/textView30"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="72dp"
                android:layout_marginStart="72dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/switch1"
                android:layout_alignBottom="@+id/textView30"
                android:layout_toRightOf="@+id/textView30"
                android:layout_toEndOf="@+id/textView30"
                android:layout_marginLeft="39dp"
                android:layout_marginStart="39dp" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView22"
                android:background="@drawable/data_icon"
                android:layout_alignTop="@+id/switch1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#edf5fe"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/relativeLayout32"
            android:layout_alignLeft="@+id/relativeLayout32"
            android:layout_alignStart="@+id/relativeLayout32">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Language"
                android:id="@+id/textView31"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="74dp"
                android:layout_marginStart="74dp" />

            <Spinner
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:id="@+id/language_spinner"
                android:layout_marginRight="12dp"
                android:layout_marginEnd="27dp"
                android:layout_marginTop="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/imageView23"
                android:background="@drawable/language_icon"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="24dp"
                android:layout_marginStart="24dp" />
        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>