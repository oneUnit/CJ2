<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout2"
    android:background="#FFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/toplayout"
        android:background="#edf5fe">


        <TextView
            android:id="@+id/dataDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4a4c4d"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="19dp"
            android:text="DDMMYY"
            android:textAppearance="?android:attr/textAppearanceLarge"

            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateBeforeBtn"
            android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/left_arrow"
            android:layout_alignTop="@+id/dataDate"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dateAfterBtn"
            android:layout_alignTop="@+id/dataDate"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/right_arrow"/>

    </RelativeLayout>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="485dp"
    android:layout_marginTop="65dp"
    android:background="#444b55">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="5"
        android:textSize="50dp"
        android:id="@+id/totalVolumeNum"
        android:textColor="#807f86"
        android:paddingRight="5dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/totalVolumeType"
        android:layout_toStartOf="@+id/totalVolumeType" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MB"
        android:textSize="50dp"
        android:id="@+id/totalVolumeType"
        android:textColor="#807f86"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_alignTop="@+id/totalVolumeNum"
        android:layout_alignRight="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

</RelativeLayout>


    <RelativeLayout
        android:layout_width="165dp"
        android:layout_height="40dp"
        android:id="@+id/middlelayout"
        android:layout_marginTop="45dp"
        android:background="#be0830"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_view"
            android:background="@drawable/change_view_button"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout"

        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <com.jjoe64.graphview.GraphView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/graph"
          />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/y_axis"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_marginRight="19dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="45dp"
            android:background="@drawable/x_axis"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:id="@+id/change_view_menu"
        android:background="#edf5fe"
        android:visibility="gone"
        android:layout_marginTop="290dp"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="Daily"
            android:textSize="35sp"
            android:textColor="#3c434e"
            android:background="#edf5fe"
            android:id="@+id/daily_button"
            android:textAllCaps="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="Weekly"
            android:textSize="35sp"
            android:textColor="#593c434e"
            android:background="#edf5fe"
            android:id="@+id/weekly_button"
            android:layout_below="@+id/daily_button"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:text="Monthly"
            android:textSize="35sp"
            android:textColor="#593c434e"
            android:background="#edf5fe"
            android:id="@+id/monthly_button"
            android:layout_below="@+id/weekly_button"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"/>

    </RelativeLayout>


</RelativeLayout>